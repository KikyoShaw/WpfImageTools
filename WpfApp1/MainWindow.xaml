<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Height="45" Width="75" Content="添加水印" Click="ButtonBase_OnClick"/>
            <Button Margin="20 0 0 0" Height="45" Width="75" Content="图片拼接" Click="ButtonBase2_OnClick"/>
            <Button Margin="20 0 0 0" Height="45" Width="75" Content="图片裁剪" Click="ButtonBase3_OnClick"/>
            <Button Margin="20 0 0 0" Height="45" Width="75" Content="图片缩放" Click="ButtonBase4_OnClick"/>
        </StackPanel>
    </Grid>

</Window>
